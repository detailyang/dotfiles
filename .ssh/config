Host *
    ControlMaster auto
    ControlPath /tmp/ssh_connection_%h_%p_%r.sock
    ControlPersist 72h
    GSSAPIAuthentication=no
    StrictHostKeyChecking=no
    TCPKeepAlive=yes
    CheckHostIP=yes
    ServerAliveInterval=15
    ServerAliveCountMax=6
    ForwardAgent=yes
    UserKnownHostsFile /dev/null
